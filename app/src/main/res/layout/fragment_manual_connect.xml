<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AutoConnectFragment">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/ic_laptop" />

        <TextView
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="50dp"
            android:textColor="@android:color/primary_text_light"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter server details that appear on your PC screen." />

        <EditText
            android:id="@+id/ipEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="IP"
            android:inputType="textUri"
            android:text="192.168.2.2" />

        <EditText
            android:id="@+id/portEditText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="5"
            android:hint="Port"
            android:inputType="number"
            android:maxLength="4"
            android:text="8081" />

        <android.support.design.button.MaterialButton
            android:id="@+id/manualConnectBtn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Connect"
            android:textSize="14sp"
            android:theme="@style/PrimaryButton" />

        <android.support.design.button.MaterialButton
            android:id="@+id/gotoAutoConnectBtn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:text="Try Auto-Connect"
            android:textSize="11sp" />
    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>